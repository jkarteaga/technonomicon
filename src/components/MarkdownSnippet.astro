---
const { markdown, class: className, href, components, cta } = Astro.props;
markdown.body = markdown.body.split("").slice(0, 10).join("");

const { Content } = await markdown.render();
---

<a
  class:list={[className, "hover:scale-105 transition-all ease-in-out"]}
  class={className}
  href={href}
>
  <div>
    <Content components={components} />
  </div>
  <div class="btn btn-block btn-gohst">{cta}</div>
</a>
